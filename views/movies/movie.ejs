<%- include('../partials/header.ejs') %>

 <div class="album py-5  ">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3" height="350 px">
            <% movies.forEach(function(movie){ %>
            <div class="col">
                <div class="card shadow-sm">
                    <img src="<%= movie.image %>" class="card-img-top" height="350 px">
                    
                    <div class="card-body">
                        <h5 class="card-title"><%= movie.name %></h5>
                        <p class="card-text"><%= movie.desc %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a class="btn btn-primary" href="/movie/<%= movie._id %>" role="button">View</a>
                                <a class="btn btn-outline-primary" href="/ticket" role="button">Ticket</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>