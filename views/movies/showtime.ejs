<%- include('../partials/header.ejs') %>
<div class="mt-5" style="margin-left: 750px;">
    <h1 style="font-family: 'Roboto'; color: whitesmoke;"><%= movies.name %></h1>
</div>
<div class="album py-5  ">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">
            
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <img src="<%= movies.image %>" class="card-img-top" height="550 px">
                </div>
            </div>
            <div class="col-lg-6" style="margin-left: 100px;">
                
                <div class="card mt-3 " style="max-width: 550px; max-height: 450px;">
                    <div class="card-header">
                      <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                          <a class="nav-link change" style="color:#70B7BA;" href="#>">Description</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link change" style="color:#70B7BA;" href="/movie/<%= movies._id %>/showtime">Showtime</a>
                        </li>
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" style="margin-left: 100px;">Choose Theater</button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                          <li><a class="dropdown-item" href="#">Action</a></li>
                          <li><a class="dropdown-item" href="#">Another action</a></li>
                          <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                      </ul>
                     
                    </div>
                    <div>
                    <div class="row-cols-4 mt-3" style="margin-left: 20px;">
                        <h5>Date:</h5>
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" style="margin-left: 20px;">Choose Date</button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </div>
                    <div class="row-cols-6 mt-3" style="margin-left: 20px;">
                        <h5>Time:</h5>
                        <button type="button" class="btn btn-outline-primary">12:10</button>
                        <button type="button" class="btn btn-outline-primary">15:40</button>
                        <button type="button" class="btn btn-outline-primary">17:30</button>
                    </div>
                    </div>
                   
                    <div class="mt-3 mb-3" style="margin-left: 230px;">
                        <a class="btn btn-outline-primary" href="/ticket" role="button">Ticket</a>
                    </div>
                </div>
            </div>
        
            
            

        </div>
    </div>
</div>

