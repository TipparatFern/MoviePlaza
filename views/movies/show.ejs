<%- include('../partials/header.ejs') %>
<!-- canvas -->
<div>
  <img src="<%= movies.canvas %> " width="1920px" height="350px" style="filter: opacity(50%)">
  <div class="top-left">
  <div style="color:white; font-size: 100px;""><%= movies.title %></div>
  <div style="color:#07a461; font-size: 50px; font-weight: bold;">Description</div>
  <div><h5 style="color:white;"><%= movies.desc %></h5></div>
  <div style="color: gray;">release date: <%= movies.releasedate %></div>
  <div>
    <i class="fas fa-film icon" style="color: #FFC90E;"></i><text style="color:white;"><%= movies.genre %></text>
  </div>
  <div>
    <i class="far fa-clock icon" style="color: #FFC90E;"></i><text style="color:white;"><%= movies.runtime %></text>
    <i class="fas fa-star icon" style="color: #FFC90E;"></i><text style="color:white;"><%= movies.rating %></text>
  </div>                   
  </div>
</div>
 
<a class="nav-link ms-5" style="color: whitesmoke; font-family:'Poppin', sans-serif; font-size: 50px;" href="/movie/<%= movies._id %>/showtime">choose showtime</a>
<!-- comment -->
<div class="container">
  <form action='/movie/<%= movies._id %>/comments' method='POST'>
      <div class="mb-3">
        <label class="form-label" style="color: white;">Comment</label>
        <input type="text" class="form-control" name="comment[text]" placeholder="Comment">
      </div>
      <button type="submit" class="btn btn-outline-light">Submit</button>
  </form>
</div>



<% movies.comments.forEach(function(comment){ %>
  <p style="margin-left: 200px; margin-top: 20px; color: whitesmoke;">
    <strong><%= comment.author.username %></strong> - <%= comment.text %>
  </p>  
<%});%>
      
