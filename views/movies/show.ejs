<%- include('../partials/header.ejs') %>
<div class="mt-5" style="margin-left: 750px;">
    <h1><%= movies.name %></h1>
</div>
<div class="album py-5  ">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">
            
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <img src="<%= movies.image %>" class="card-img-top" height="550 px">
                </div>
            </div>
            <div class="col-lg-6" style="margin-left: 100px;">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/odM92ap8_c0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                <div class="card mt-3" style="max-width: 550px; max-height: 450px;">
                    <div class="card-header">
                      <ul class="nav nav-pills card-header-pills">
                        <li class="nav-item">
                          <a class="nav-link" href="/description">Description</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/showtime">Showtime</a>
                        </li>
                      </ul>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><%= movies.desc %></p>
                    </div>
                  </div>
            </div>
        </div>
    </div>
</div>

<a class = "btn btn-primary" href='/movie/<%= movies._id %>/comments/new'>Add new comment</a>
<% movies.comments.forEach(function(comment){ %>
  <p>
    <strong><%= comment.author.username %></strong> - <%= comment.text %>
  </p>  
<%});%>

<%- include('../partials/footer.ejs') %>
