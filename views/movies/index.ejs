<%- include('../partials/header.ejs') %>
<div class="text-center">
    <h1 class="top5">NOW SHOWING</h1>
</div>
<div class="album py-5 wall-black">
    <div class="container">
        <div class="row row-cols-1 row-cols-lg-5 row-cols-md-2 row-cols-sm-2  g-3">
            <% movies.forEach(function(movie){ %>
            <div class="col">
                 <div class="card shadow-sm" style="width: 18rem">
                    <img src="<%= movie.image %>" class="card-img-top" height="350px">
                     <div class="card-body">
                        <h5 class="class-title" style="font-weight: bold;"><%= movie.title %></h5>
                        <div>
                            <i class="fas fa-film icon" style="color: #FFC90E;"></i><text><%= movie.genre %></text>
                        </div>
                         <div>
                            <i class="far fa-clock icon" style="color: #FFC90E;"></i><text><%= movie.runtime %></text>
                            <i class="fas fa-star icon" style="color: #FFC90E;"></i><text><%= movie.rating %></text>
                            <text style="color:gray; font-family: 'Poppin', sans-serif; font-size:15px;">release date: <%= movie.releasedate %></text>
                        </div>
                        <div class="btn-group mt-3">
                            <a class="btn btn-outline-light" style="background-color: #1b64d0;" href="/movie/<%= movie._id %>" role="button">View</a>
                            <a class="btn btn-outline-light" style="background-color: #07a461;" href="/movie/<%= movie._id %>/ticket" role="button">Ticket</a>
                        </div>
                    </div>
                </div>               
            </div>
            <% }); %> 

        </div>
    </div>
</div>



          
