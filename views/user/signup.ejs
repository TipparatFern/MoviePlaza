<%- include('./header.ejs') %>
    <div class="row content">
        <div class="col-md-12">
            <h3 class="signin-text mb-3">Sign up</h3>
            <form action='/signup' method='POST'>
                <div class="form-group col">
                    <label for="firstname" class="mt-3">Firstname</label>
                    <input class="form-control" type="text" name="firstname">
                </div>
                <div class="form-group col">
                    <label for="lastname" class="mt-3">Lastname</label>
                    <input class="form-control" type="text" name="lastname">
                </div>
                <div class="form-group col">
                    <label for="username" class="mt-3">Username</label>
                    <input class="form-control" type="text" name="username">
                </div>
                <div class="form-group col">
                    <label for="email" class="mt-3">Email Adddress</label>
                    <input class="form-control" type="email" name="email">
                </div>
                <div class="form-group col">
                    <label for="email" class="mt-3">Password</label>
                    <input class="form-control" type="password" name="password">
                </div>
                <div class="form-group col">
                    <label for="email" class="mt-3">Confirm Password</label>
                    <input class="form-control" type="confirmpassword" name="confirmpassword">
                </div>
                <div class="form-group form-check mt-3">
                    <div class="inline ms-5">
                        <p class="inline" >Already have an acoount
                            <a class="link " href="/login">Login</a>
                        </p>
                    </div>
                </div>
                <button class="btn btn-class mt-3 center">Sign up</button>
            </form>
        </div>
    </div>
                   
 <%- include('./footer.ejs') %>