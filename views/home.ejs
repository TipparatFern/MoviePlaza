<%- include('partials/header.ejs') %>
<div>
    <img src="/images/wallpaper.jpg" width="1920px" height="300px">
</div>
<div class="text-center">
    <h1 class="top5">TOP5 MOVIE</h1>
</div>
<div class="album py-5 wall-black">
    <div class="container">
        <div class="row row-cols-1 row-cols-lg-5 row-cols-md-2 row-cols-sm-2  g-3">
            <% movies.forEach(function(movie){ %>
            <div class="col">
                 <div class="card shadow-sm" style="width: 18rem">
                    <div>
                        <div class="gold-border">1</div>
                        <a href="/movie/<%= movie._id %>" role="button">
                        <img src="<%= movie.image %>" class="card-img-top" height="350px">
                        </a>
                    </div>
                </div>               
            </div>
            <% }); %> 

        </div>
    </div>
</div>



<%- include('partials/footer.ejs') %>